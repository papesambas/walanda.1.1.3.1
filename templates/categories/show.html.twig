{% extends 'base.html.twig' %}

{% block title %}
	{{categories.nom}}
{% endblock %}

{% block body %}
	<h1>Categories</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ categories.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ categories.nom }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ categories.slug }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ categories.description }}</td>
			</tr>
			<tr>
				<th>Couleur</th>
				<td>{{ categories.couleur }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_categories_index') }}">back to list</a>

	<a href="{{ path('app_categories_edit', {'slug': categories.slug}) }}">edit</a>

	{{ include('categories/_delete_form.html.twig') }}
{% endblock %}
