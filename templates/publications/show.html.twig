{% extends 'blog/base.html.twig' %}

{% block title %}
	{{ publication.titre }}
{% endblock %}

{% block body %}
	<div class="container  pb-4 mb-4">
		<h1>{{ publication.titre }}</h1>
		<p>
			<span class="fw-bold">
				Publiée par :</span>
			{{ publication.user }}</p>
		<p>
			<span class="fw-bold">le :</span>
			{{ publication.createdAt ? publication.createdAt|date('Y-m-d H:i:s') : '' }}</p>
		<p>
			<span class="fw-bold">dans la Catégorie :
			</span>
			{{ publication.categorie }}</p>

		<hr>
		{{ publication.contenu|raw}}
		<hr class="mt-4">
	</div>
	{% include "comments/form.html.twig" %}
