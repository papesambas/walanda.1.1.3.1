{% extends 'base.html.twig' %}

{% block title %}Pages index
{% endblock %}

{% block body %}
	<h1>Pages index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Slug</th>
				<th>Content</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for page in pages %}
				<tr>
					<td>{{ page.id }}</td>
					<td>{{ page.titre }}</td>
					<td>{{ page.slug }}</td>
					<td>{{ page.content }}</td>
					<td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_pages_show', {'slug': page.slug}) }}">show</a>
						<a href="{{ path('app_pages_edit', {'slug': page.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_pages_new') }}">Create new</a>
{% endblock %}
